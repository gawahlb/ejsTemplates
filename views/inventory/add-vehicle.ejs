<% include('../partials/header') %>

<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
    
<form action="/inv/add-vehicle" method="post">
    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"><br>
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>"><br>
    <label for="inv_description">Description:</label>
    <input type="text" id="inv_description" name="inv_description" required value="<%= locals.inv_description %>"><br>
    <label for="inv_image">Image:</label>
    <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>/images/vehicles/no-image.png"><br>
    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>/images/vehicles/no-image-tn.png"><br>
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>"><br>
    <label for="inv_miles">Mileage:</label>
    <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>"><br>
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>"><br>
    <label for="classification_id">Classification:</label>
    <%- classificationList %>
    <button type="submit" class="addVehicle">Add Vehicle</button>
</form>

<% include('../partials/footer') %>