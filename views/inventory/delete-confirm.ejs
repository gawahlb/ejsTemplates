<% include('../partials/header') %>

<main id="vehicle">
<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
    
<form action="/inv/delete" method="post" id="vehicleForm">
    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required readonly value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required readonly value="<%= locals.inv_model %>"><br>
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" required readonly value="<%= locals.inv_year %>"><br>
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required readonly value="<%= locals.inv_price %>"><br>
    <p>Confirm Deletion - The delete is permanent.</p>
    <button type="submit" class="deleteVehicle">Delete</button>
</form>
</main>
<% include('../partials/footer') %>